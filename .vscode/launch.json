{
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "program": "${workspaceFolder}\\node_modules\\jest",
      "cwd": "${workspaceFolder}",
      "args": [
        "--runInBand",
        "--watchAll=false"
      ]
    }
  ]
}